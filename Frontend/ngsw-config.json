{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.csr.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.csr.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js",
          "/**/*.png"
        ],
        "urls": [
          "https://fonts.googleapis.com/**",
          "https://fonts.gstatic.com/**",
          "https://fonts.googleapis.com/css?family=Montserrat",
          "https://fonts.gstatic.com/s/montserrat/v15/4UaGrENHsxJlGDuGo1OIlL3Owp5QWg.woff2",
          "https://fonts.gstatic.com/s/montserrat/v15/4UaGrENHsxJlGDuGo1OIlL3Owp5QWg.woff"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    },
    {
      "name": "backend",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "urls": [
          "/api/auth/**",
          "/api/spotify/**",
          "/api/youtube/**",
          "/api/search/**"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-calls",
      "urls": [
        "/api/auth/**",
        "/api/spotify/**",
        "/api/youtube/**",
        "/api/search/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 300,
        "maxAge": "1hr",
        "timeout": "5s"
      }
    }
  ]
}