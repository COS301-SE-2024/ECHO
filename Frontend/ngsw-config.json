{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.csr.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.csr.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js",
          "/**/*.png"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    },
    {
      "name": "backend",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "urls": [
          "/api/auth/**",
          "/api/spotify/**",
          "/api/youtube/**",
          "/api/search/**"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-calls",
      "urls": [
        "/api/**"
      ],
      "cacheConfig": {
        "strategy": "network",
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "10s"
      }
    }
  ],
  "navigationUrls": [
    "/**",            
    "!/api/**"
  ]
}
